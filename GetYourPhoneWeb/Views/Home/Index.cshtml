@model IEnumerable<GetYourPhoneWeb.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="card shadow border-0 my-4">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">

        <div class="row pb-3">

            <div class="col-6">
            </div>

            <div class="col-6 text-end">
                <a asp-controller="Home" asp-action="Add" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Add New Product
                </a>
            </div>

        </div>

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%;">

                <thead>
                    <tr>
                        <th>SN</th>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Created</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>

                    @{
                        int sn = 0;
                    }

                    @foreach (var product in Model)
                    {
                        sn = sn + 1;

                        <tr>
                            <td>@sn</td>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>@product.Price</td>
                            <td>@product.CreatedOn</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        }
        else
        {
            <div class="alert alert-info text-center">
                No product records found. Add your product by clicking the "Add New Product" button.
            </div>
        }
    </div>

</div>